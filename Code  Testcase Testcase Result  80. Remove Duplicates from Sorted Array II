class Solution {
public:
    int removeDuplicates(vector<int>& nums) {
    int i=0, j=0;
    int n =nums.size();

    while(j<n){
        int temp = nums[j];
        int count =0;
        while(j<n && nums[j]== temp){
            j++;
            count++;
        }
        if(count >= 2){
            nums[i]= temp;
            nums[i+1] = temp;
            i+=2;
        }
        else{
            nums[i]=temp;
            i++;
        }
    }  
    return i;  
    }
};
