#include <bits/stdc++.h> 


int helper(vector<int> &arr, int n, int num)
{

	int sum = 0 ;
	
	for (int i = 0 ; i < num ; i++)
	{
		sum += arr[i]  ;
	}
	
	return sum ;
}

// Finds the sum of last num digits.
int helper1(vector<int> &arr, int n, int num)
{

	int sum = 0 ;

	for (int i = n - 1 ; i >= n - num; i--)
	{
		sum += arr[i] ;
	}

	return sum ;
}

int specialSum(vector<int> &arr, int n)
{

	int minSpecialSum  = 1e9 ;

	for (int num = 1 ; num <= n ; num++)
	{
		int firstSum = helper(arr, n, num) ;
		int secondSum = helper1(arr, n, num) ;
		minSpecialSum  = min(firstSum + secondSum, minSpecialSum )  ;
	}

	return minSpecialSum  ;
}
